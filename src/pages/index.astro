---
import Shell from '../layouts/shell.astro';
import heroImagePortraitLarge from '../images/Barbora_Psenicova_portrait_large.webp';
import heroImagePortraitMedium from '../images/Barbora_Psenicova_portrait_medium.webp';
import heroImagePortraitSmall from '../images/Barbora_Psenicova_portrait_small.webp';
import heroImageBodyLarge from '../images/Barbora_Psenicova_stand_large.webp';
import heroImageBodyMedium from '../images/Barbora_Psenicova_stand_medium.webp';
import heroImageBodySmall from '../images/Barbora_Psenicova_stand_small.webp';
import ContactButton from '../components/ContactButton.astro';

const title = 'Barbora Pšenicová | Terapie a poradenství';
const description = 'Hledáte ve své situaci oporu, pochopení a respekt? Velmi ráda vám je nabídnu.';
---

<Shell title={title} description={description}>
	<section class="hero flex flex-col items-center justify-center w-full max-w-7xl md:mx-auto">
		<div class="flex flex-col md:flex-row-reverse items-center md:items-start justify-center w-full py-4 sm:py-6 md:p-8 md:gap-8 xl:gap-12">
			<article class="flex flex-col justify-center sm:gap-2 md:gap-4 lg:gap-8 text-darkest-blue font-cinzel md:mt-24 lg:mt-48">
				<h1 class="text-3xl sm:text-5xl lg:text-6xl xl:text-8xl">Barbora Pšenicová</h1>
				<div class="text-lg sm:text-2xl lg:text-3xl">Terapeutka | konzultantka</div>

				<h2 class="hidden md:block text-lg opacity-70 font-normal">
					Hledáte ve své situaci oporu, pochopení a respekt? Velmi ráda vám je
					nabídnu.
				  </h2>

				<ContactButton label="Chci konzultaci" to="/contact" classList="hidden md:block" />
			</article>
			<img 
				src={heroImagePortraitLarge.src}
				srcset={`${heroImagePortraitSmall.src} 455w, ${heroImagePortraitMedium.src} 911w, ${heroImagePortraitLarge.src} 1366w`}
				sizes="(max-width: 455px) 455px, (max-width: 911px) 911px, (max-width: 1366px) 1366px"
				alt="Barbora Pšenicová"
				class="block md:hidden sm:w-8/12"
			/>

			<img 
				src={heroImageBodyLarge.src}
				srcset={`${heroImageBodySmall.src} 455w, ${heroImageBodyMedium.src} 911w, ${heroImageBodyLarge.src} 1366w`}
				sizes="(max-width: 455px) 455px, (max-width: 911px) 911px, (max-width: 1366px) 1366px"
				alt="Barbora Pšenicová"
				class="hidden md:block w-6/12"
			/>
		</div>

	</section>
</Shell>
